<%= form_for @neko do |f| %>
    <div class="field">
    <%= f.label :住所（都道府県） %>
    <%= f.text_field :thing, :size => 140 %>
    </div>

    <div class="field">
    <%= f.label :保護猫と出会った場所（船橋市保健所等） %>
    <%= f.text_field :way, :size => 140 %>
    </div>

    <div class="field">
    <%= f.label :飼うために購入した物品 %>
    <%= f.text_field :thing, :size => 140 %>
    </div>

    <div class="field">
    <%= f.label :飼うためにかかった費用の総額 %>
    <%= f.text_field :cost, :size => 140 %>
    </div> 

    <div class="field">
    <%= f.label :備考欄 %>
    <%= f.text_field :detail, :size => 140 %>
    </div>

    <div class="field">
    <%= f.label :猫の画像等 %>
    <%= f.file_field :image %>
  </div>

    <%= f.submit "編集する" %>
  <% end %>